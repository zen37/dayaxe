@page "/admin"
<h3>Admin</h3>

<div class="nav nav-tabs" id="nav-tab" role="tablist">
    <button class="nav-item nav-link active" id="tab1-tab" data-toggle="tab" @onclick="(() => currentTab = 1)" role="tab" aria-controls="tab1" aria-selected="true">Tab 1</button>
    <button class="nav-item nav-link" id="tab2-tab" data-toggle="tab" @onclick="(() => currentTab = 2)" role="tab" aria-controls="tab2" aria-selected="false">Tab 2</button>
</div>

<div class="tab-content" id="nav-tabContent">
    <div class="tab-pane fade @(currentTab == 1 ? "show active" : "")" id="tab1" role="tabpanel" aria-labelledby="tab1-tab">
        <p>Content for Tab 1 goes here.</p>
    </div>
    <div class="tab-pane fade @(currentTab == 2 ? "show active" : "")" id="tab2" role="tabpanel" aria-labelledby="tab2-tab">
        <p>Content for Tab 2 goes here.</p>
    </div>
</div>

@code {
    int currentTab = 1;
}
