@page "/admin"

<h3>Admin</h3>

<div class="container">
    <ul class="nav nav-tabs">
        <li class="@((ActiveTab == "Tab1") ? "active" : "")"><a @onclick='() => SetActiveTab("Tab1")'>Tab 1</a></li>
        <li class="@((ActiveTab == "Tab2") ? "active" : "")"><a @onclick='() => SetActiveTab("Tab2")'>Tab 2</a></li>
    </ul>

    <div class="tab-content">
        <div class="tab-pane @((ActiveTab == "Tab1") ? "active" : "")" id="tab1">
            Content for Tab 1 goes here.
        </div>
        <div class="tab-pane @((ActiveTab == "Tab2") ? "active" : "")" id="tab2">
            Content for Tab 2 goes here.
        </div>
    </div>
</div>

@code {
    private string ActiveTab { get; set; } = "Tab1";

    private void SetActiveTab(string tabName)
    {
        ActiveTab = tabName;
    }
}
